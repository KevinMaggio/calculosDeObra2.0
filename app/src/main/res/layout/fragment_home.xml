<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_light_blue"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.HomeFragment">

        <ImageView
            android:background="@color/oscuro"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginBottom="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/presupuestos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="presupuestos"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculos_mt2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="sacar mt2"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/costo_material"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="costo material"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculo_escalera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="calcular escalera"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculos_paredes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="calculo paredes"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mis_trabajos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/gradient_button_blue"
            android:text="Mis Trabajos"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>